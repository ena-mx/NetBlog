@model KeyValuePair<string, NetBlog.Queries.Menu.MenuItem[]>
<div class="title-bar" style="background: #2c3840">
    <div class="title-bar-left">
        <button class="menu-icon show-for-small-only" type="button" data-toggle="offCanvasLeft"></button>
        <a class="app-bar-title" asp-page="/Index" style="color: white;">@Model.Key</a>
    </div>
    <div class="title-bar-right grid-x align-right hide-for-small-only">
        @for (int i = 0; i < Model.Value.Length; i++)
        {
            @if (Model.Value[i].IsLocal)
            {
                <div>
                    <a asp-page="@Model.Value[i].Url" style="color: white; padding-right: 1rem; font-size: small;"><i class="@Model.Value[i].FontAwasomeIcon"></i>&nbsp;@Model.Value[i].Description</a>
                </div>
            }
            else
            {
                <div class="padding-right-1">
                    <a href="@Model.Value[i].Url" target="_blank" style="color: white; font-size: small;"><i class="@Model.Value[i].FontAwasomeIcon"></i></a>
                </div>
            }
        }
        @*@if (User.Identity.IsAuthenticated)
